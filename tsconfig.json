{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES5",
      "ES6"
    ],
    "sourceMap": true,
    "declaration": true,
    "importHelpers": false,
    "newLine": "LF",
    "skipLibCheck": true,
    "noEmitHelpers": false,
    "noImplicitReturns": false,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "jsonrpc.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "test"
  ]
}
