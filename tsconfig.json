{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018",
        "dom"
      ],
      "sourceMap": true,
      "declaration": true,
      "importHelpers": true,
      "newLine": "LF",
      "skipLibCheck": true,
      "noEmitHelpers": true,
      "noImplicitReturns": false,
      "strict": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": [
      "jsonrpc.ts"
    ],
    "exclude": [
      "node_modules",
      "build",
      "test"
    ]
  }
